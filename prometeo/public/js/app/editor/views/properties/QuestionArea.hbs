<div class="properties textarea">
    <form class="inner">

        <div class="row">

            <input type="hidden" name="id" value="{{id}}">
            <input type="hidden" name="duration" value="-1">

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_frame">Frame</label>
                    <input type="text" id="p_frame" name="frame" value="{{ frame }}" class="form-control change-listener">
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_background">Sfondo</label>
                    <input type="text" id="p_background" name="background" class="colorpicker form-control change-listener" value="{{ background }}">
                </div>
            </div>

        </div>

        <div class="row">

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_text_color">Colore testo</label>
                    <input type="text" id="p_text_color" name="text_color" class="colorpicker form-control change-listener" value="{{ text_color }}">
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_text_size">Dimensione testo</label>
                    <input type="number" min="4" id="p_text_size" name="text_size" class="form-control change-listener" value="{{ text_size }}">
                </div>
            </div>

        </div>


        <div class="row">

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_question_type">Tipologia</label>
                    <select id="p_question_type" name="question_type" class="form-control change-listener">
                        <option value="facoltativa" {{#ifCond question_type '==' 'facoltativa' }}selected{{/ifCond}}>Facoltativa</option>
                        <option value="obbligatoria" {{#ifCond question_type '==' 'obbligatoria' }}selected{{/ifCond}}>Obbligatoria</option>
                    </select>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label for="p_exp">Punti esperienza</label>
                    <input type="number" min="0" id="p_exp" name="exp" value="{{ exp }}" class="form-control change-listener">
                </div>
            </div>

        </div>

        <div class="form-group">
            <label for="p_question">Domanda</label>
            <textarea id="p_question" name="question" class="form-control live-listener">{{ question }}</textarea>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-6">
                    <label>Risposte</label>
                </div>
                <div class="col-xs-6 text-right">
                    <span class="btn btn-default btn-sm" id="add_answer"><i class="fi-plus"></i> Aggiungi risposta</span>
                </div>
            </div>
            <div class="answers-list" id="answers_list"></div>
            <div class="empty-placeholder">Nessuna risposta presente, aggiungine una utilizzando il pulsante qui sopra.</div>
        </div>

    </form>
</div>