
<div class="prp-player" id="prp_player_{{ movie_id }}">

    <div class="prp-player-inner">

        <!-- player movie container -->
        <div class="prp-movie-wrap">
            <div class="prp-movie">
                <!-- fill with js -->
            </div>
        </div>


        <!-- player controls bar -->
        <div class="prp-controls">

            <div class="prp-progress-bar">
                <div class="prp-progress"></div>
            </div>

            <div class="prp-left-controls">

                <div class="prp-btn prp-btn-play">
                    <svg xmlns:xlink="http://www.w3.org/1999/xlink" height="100%" version="1.1" viewBox="0 0 36 36" width="100%">
                        <use class="prp-svg-shadow"></use>
                        <path class="prp-svg-fill" d="M 12,26 18.5,22 18.5,14 12,10 z M 18.5,22 25,18 25,18 18.5,14 z" id="prp-svg-transition-10"></path>
                    </svg>
                </div>

                <div class="prp-btn prp-btn-pause">
                    <svg xmlns:xlink="http://www.w3.org/1999/xlink" height="100%" version="1.1" viewBox="0 0 36 36" width="100%">
                        <use class="prp-svg-shadow"></use>
                        <path class="prp-svg-fill" d="M 12,26 16,26 16,10 12,10 z M 21,26 25,26 25,10 21,10 z" id="prp-svg-transition-10"></path>
                    </svg>
                </div>

                <div class="prp-time-display">
                    <span class="prp-time-current"></span>
                    <span class="prp-time-separator"> / </span>
                    <span class="prp-time-duration"></span>
                </div>

            </div>

            <div class="prp-right-controls">

                <div class="prp-exp-status">
                    <div class="prp-exp-counter"></div>
                    <div class="prp-exp-notifier"></div>
                </div>

                <div class="prp-btn prp-btn-fullscreen">
                    <svg xmlns:xlink="http://www.w3.org/1999/xlink" height="100%" version="1.1" viewBox="0 0 36 36" width="100%">
                        <use class="prp-svg-shadow prp-fullscreen-button" stroke="#000" stroke-opacity=".15" stroke-width="2px"></use>
                        <use class="prp-svg-shadow prp-fullscreen-button-corner-1" stroke="#000" stroke-opacity=".15" stroke-width="2px"></use>
                        <use class="prp-svg-shadow prp-fullscreen-button-corner-2" stroke="#000" stroke-opacity=".15" stroke-width="2px"></use>
                        <use class="prp-svg-shadow prp-fullscreen-button-corner-3" stroke="#000" stroke-opacity=".15" stroke-width="2px"></use>
                        <path class="prp-fullscreen-button-corner-0" d="m 10,16 2,0 0,-4 4,0 0,-2 L 10,10 l 0,6 0,0 z" fill="#fff" id="prp-svg-12"></path>
                        <path class="prp-fullscreen-button-corner-1" d="m 20,10 0,2 4,0 0,4 2,0 L 26,10 l -6,0 0,0 z" fill="#fff" id="prp-svg-13"></path>
                        <path class="prp-fullscreen-button-corner-2" d="m 24,24 -4,0 0,2 L 26,26 l 0,-6 -2,0 0,4 0,0 z" fill="#fff" id="prp-svg-14"></path>
                        <path class="prp-fullscreen-button-corner-3" d="M 12,20 10,20 10,26 l 6,0 0,-2 -4,0 0,-4 0,0 z" fill="#fff" id="prp-svg-15"></path>
                    </svg>
                </div>

            </div>

        </div>

        <!-- player preloader -->
        <div class="prp-movie-loading">
            <div class="va-wrap">
                <div class="va-middle">
                    <div class="prp-loader">
                        <div class="prp-loader1 sk-child"></div>
                        <div class="prp-loader2 sk-child"></div>
                        <div class="prp-loader3 sk-child"></div>
                        <div class="prp-loader4 sk-child"></div>
                        <div class="prp-loader5 sk-child"></div>
                        <div class="prp-loader6 sk-child"></div>
                        <div class="prp-loader7 sk-child"></div>
                        <div class="prp-loader8 sk-child"></div>
                        <div class="prp-loader9 sk-child"></div>
                        <div class="prp-loader10 sk-child"></div>
                        <div class="prp-loader11 sk-child"></div>
                        <div class="prp-loader12 sk-child"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>